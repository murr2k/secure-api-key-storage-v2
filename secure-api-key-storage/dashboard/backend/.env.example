# Master password for the secure storage
API_KEY_MASTER=your-secure-master-password

# JWT Secret Key - Generate a strong random key for production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# Database (for session storage, audit logs, etc.)
DATABASE_URL=sqlite+aiosqlite:///./dashboard.db

# Redis (optional, for caching and session storage)
REDIS_URL=redis://localhost:6379

# Frontend URL
FRONTEND_URL=http://localhost:3000
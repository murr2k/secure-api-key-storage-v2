# Database Configuration
DB_PASSWORD=your_secure_database_password
DATABASE_URL=postgresql://keymanager:${DB_PASSWORD}@postgres:5432/secure_keys

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# Security Keys (Generate these with: openssl rand -hex 32)
JWT_SECRET_KEY=your_jwt_secret_key_here
MASTER_PASSWORD=your_master_password_here
ENCRYPTION_KEY=your_encryption_key_here

# Admin Account
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
NOTIFICATION_EMAIL=admin@example.com

# External URLs
API_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# SSL Configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Deployment Configuration
STAGING_HOST=staging.yourdomain.com
STAGING_USER=deploy
PRODUCTION_HOST=yourdomain.com
PRODUCTION_USER=deploy

# Feature Flags
ENABLE_2FA=true
ENABLE_CERTIFICATE_AUTH=true
ENABLE_AUDIT_SIGNING=true
ENABLE_KEY_ROTATION=true

# Performance Tuning
MAX_WORKERS=4
CONNECTION_POOL_SIZE=20
CACHE_TTL=3600

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
AUDIT_LOG_RETENTION_DAYS=365

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key